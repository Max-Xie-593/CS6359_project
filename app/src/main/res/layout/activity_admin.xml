<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_admin_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminActivity">

    <TextView
            android:id="@+id/adminMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/view_tutors_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View tutors"
            app:layout_constraintEnd_toEndOf="@+id/adminMessage"
            app:layout_constraintStart_toStartOf="@+id/adminMessage"
            app:layout_constraintTop_toBottomOf="@+id/adminMessage" />

    <Button
            android:id="@+id/view_admins_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View admins"
            app:layout_constraintEnd_toEndOf="@+id/view_tutors_button"
            app:layout_constraintStart_toStartOf="@+id/view_tutors_button"
            app:layout_constraintTop_toBottomOf="@+id/view_tutors_button" />

    <Button
            android:id="@+id/view_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="View schedule"
            app:layout_constraintEnd_toEndOf="@+id/view_admins_button"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view_admins_button"
            app:layout_constraintTop_toBottomOf="@+id/view_admins_button" />

</androidx.constraintlayout.widget.ConstraintLayout>