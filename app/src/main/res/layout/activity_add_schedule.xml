<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
            android:id="@+id/shift_day_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the shift's day"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/shift_start_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the shift's start time (hh:mm:ss)"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/shift_day_input"
            app:layout_constraintStart_toStartOf="@+id/shift_day_input"
            app:layout_constraintTop_toBottomOf="@+id/shift_day_input" />

    <EditText
            android:id="@+id/shift_end_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the shift's end time (hh:mm:ss)"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/shift_start_input"
            app:layout_constraintStart_toStartOf="@+id/shift_start_input"
            app:layout_constraintTop_toBottomOf="@+id/shift_start_input" />

    <Button
            android:id="@+id/add_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Schedule"
            app:layout_constraintEnd_toEndOf="@+id/shift_end_input"
            app:layout_constraintStart_toStartOf="@+id/shift_end_input"
            app:layout_constraintTop_toBottomOf="@+id/shift_end_input" />
</androidx.constraintlayout.widget.ConstraintLayout>