<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
            android:id="@+id/new_user_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your new username"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/edit_user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit User"
            app:layout_constraintEnd_toEndOf="@+id/new_user_name_input"
            app:layout_constraintStart_toStartOf="@+id/new_user_name_input"
            app:layout_constraintTop_toBottomOf="@+id/new_user_name_input" />

    <Button
            android:id="@+id/edit_course_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Courses"
            app:layout_constraintEnd_toEndOf="@+id/edit_user_button"
            app:layout_constraintStart_toStartOf="@+id/edit_user_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_user_button" />
</androidx.constraintlayout.widget.ConstraintLayout>